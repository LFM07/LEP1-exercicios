---EXERCICIO 2---
#include<stdio.h>
int main(){
    int linhas;
    printf("Digite o numero de linhas: \n");
    scanf("%d", &linhas);
    if(linhas > 10){
        return 1;
    }
    for(int i = 1; i <= linhas ; i++){
        for(int j = linhas - i; j >= 1; j--){
            printf(" ");
            }
        for(int k = 1; k <= (2 * i) - 1; k++){
            printf("*");
        }
        printf("\n");
        }
    return 0;
}
--- EXERCICIO 3 ----
#include<stdio.h>

void arvore(int linhas, int invertida){
    if(invertida == 0){
        for(int i = 1; i <= linhas ; i++){
            for(int j = linhas - i; j >= 1; j--){
                printf(" ");
                }
            for(int k = 1; k <= (2 * i) - 1; k++){
                printf("*");
            }
        printf("\n");
        }
    }
        else{
            for(int i = linhas; i >= 1 ; i--){
                for(int j = 0; j < linhas - i ; j++){
                printf(" ");
                }
                for(int k = 1; k <= (2 * i) - 1; k++){
                    printf("*");
                    }
        printf("\n");
        }
        }

}


int main(){
    int linhas, n;
    printf("Digite o numero de linhas e se ela e invertida ou n(0 ou qualquer outro numero): \n");
    scanf("%d%d", &linhas, &n);
        if(linhas > 10 || linhas < 0)
        return 1;
    arvore(linhas, n);
    return 0;
}
